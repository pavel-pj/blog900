<?xml version="1.0"?>
<ruleset name="StrictIndent">
    <!-- Основной стандарт -->
    <rule ref="PSR12"/>

    <!-- Жесткие правила отступов -->
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="4"/>
            <property name="tabIndent" value="false"/>
            <property name="exact" value="true"/>
        </properties>
    </rule>

    <!-- Проверяемые пути -->
    <file>app</file>
</ruleset>