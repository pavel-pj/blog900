<?xml version="1.0"?>
<ruleset name="Laravel PSR-12 Strict">
    <!-- ==================== Базовые настройки ==================== -->
    <arg name="colors"/> <!-- Цветной вывод -->
    <arg name="cache" value=".phpcs.cache"/> <!-- Кеширование результатов -->
    <arg name="parallel" value="80"/> <!-- Параллельная обработка -->

    <!-- ==================== Основной стандарт ==================== -->
    <rule ref="PSR12"/>

    <!-- ==================== Строгие правила форматирования ==================== -->
    <!-- Отступы 4 пробела -->
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="4"/>
            <property name="tabIndent" value="false"/>
        </properties>
    </rule>

    <!-- Максимальная длина строки -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>

    <!-- Запрет табов -->
    <rule ref="Generic.WhiteSpace.DisallowTabIndent"/>

    <!-- Пробелы в конце строк -->
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>

    <!-- ==================== Специфичные для Laravel правила ==================== -->
    <!-- Проверка неймспейсов -->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace"/>

    <!-- Проверка use-деклараций -->
    <rule ref="PSR12.UseDeclarations"/>

    <!-- Проверка конкатенации -->
    <rule ref="Squiz.Strings.ConcatenationSpacing">
        <properties>
            <property name="spacing" value="1"/>
            <property name="ignoreNewlines" value="true"/>
        </properties>
    </rule>

    <!-- ==================== Исключения ==================== -->
    <!-- Игнорируем папки -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/storage/*</exclude-pattern>
    <exclude-pattern>*/bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>*/database/migrations/*</exclude-pattern>
    <exclude-pattern>*/tests/_data/*</exclude-pattern>

    <!-- Игнорируем blade-шаблоны -->
    <exclude-pattern>*.blade.php</exclude-pattern>

    <!-- ==================== Проверяемые директории ==================== -->
    <file>app</file>
    <file>config</file>
    <file>database/factories</file>
    <file>database/seeders</file>
    <file>routes</file>
    <file>tests</file>
    <file>app/Http/Controllers</file>
    <file>app/Models</file>
</ruleset>
